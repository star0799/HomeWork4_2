<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btStart"
        android:id="@+id/btStart"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btEnd"
        android:id="@+id/btEnd"
        android:layout_below="@+id/tvResult"
        android:layout_alignLeft="@+id/tvResult"
        android:layout_alignStart="@+id/tvResult"
        android:layout_marginTop="81dp"
        android:layout_alignRight="@+id/btStart"
        android:layout_alignEnd="@+id/btStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvValue"
        android:layout_above="@+id/tvResult"
        android:layout_alignLeft="@+id/btStart"
        android:layout_alignStart="@+id/btStart"
        android:layout_marginBottom="30dp"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvResult"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tvValue"
        android:layout_alignStart="@+id/tvValue"
        android:layout_alignRight="@+id/tvValue"
        android:layout_alignEnd="@+id/tvValue"
        android:textSize="18dp" />

</RelativeLayout>
